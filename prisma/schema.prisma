// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User{
  id String @id @default(uuid())

  email String @unique
  password String @default("")
  firstname String
  lastname String
  role Role @default(USER)
  validated Boolean @default(false)

  address Address[]
  resume Resume[]
}

model Address{
  id Int @id @default(autoincrement())

  city String
  street String
  cp Int

  addressUser User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model Products{
  id String @id @default(uuid())

  name String
  description String
  price Int
  stock Int
  img String

  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  resume ResumeToProducts[]
}

model Category{
  id Int @id @default(autoincrement())

  categoryName String @unique

  products Products[]
}


model Resume{
  id String @id @default(uuid())

  date DateTime   @default(now())
  quantity Int
  totalPrice Int
  
  
  createdBy User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  products ResumeToProducts[]
}

model ResumeToProducts{
  resume Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resumeId String
  products Products @relation(fields: [productsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productsId String

  @@id([resumeId, productsId])
}



