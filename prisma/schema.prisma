// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User{
  id String @id @default(uuid())

  email String @unique
  password String @default("")
  firstname String
  lastname String
  role Role @default(USER)

  address Address[]
  products Products[]
  resume Resume[]
}

model Address{
  id Int @id @default(autoincrement())

  city String
  street String
  cp Int

  addressUser User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model Products{
  id String @id @default(uuid())

  name String
  description String
  price Int
  stock Int
  category String

  purchaseUser User @relation(fields: [userId], references: [id])
  userId String

  categoryProduct Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category{
  id Int @id @default(autoincrement())

  categoryName String

  products Products[]
}


model Resume{
  id Int @id @default(autoincrement())

  date DateTime   @default(now())

  createdBy User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}